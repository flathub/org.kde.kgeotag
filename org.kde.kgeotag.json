{
    "id": "org.kde.kgeotag",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.8",
    "command": "kgeotag",
    "rename-icon": "kgeotag",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network"
    ],
    "modules": [
        {
            "name": "inih",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddefault_library=shared",
                "-Ddistro_install=true",
                "-Dwith_INIReader=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/benhoyt/inih/archive/refs/tags/r58.tar.gz",
                    "sha256": "e79216260d5dffe809bda840be48ab0eec7737b2bb9f02d2275c1b46344ea7b7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11600,
                        "stable-only": true,
                        "url-template": "https://github.com/benhoyt/inih/archive/refs/tags/r$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DEXIV2_ENABLE_XMP=ON",
                "-DEXIV2_ENABLE_EXTERNAL_XMP=OFF",
                "-DEXIV2_ENABLE_PNG=ON",
                "-DEXIV2_ENABLE_NLS=ON",
                "-DEXIV2_ENABLE_PRINTUCS2=ON",
                "-DEXIV2_ENABLE_LENSDATA=ON",
                "-DEXIV2_ENABLE_VIDEO=OFF",
                "-DEXIV2_ENABLE_WEBREADY=OFF",
                "-DEXIV2_ENABLE_DYNAMIC_RUNTIME=OFF",
                "-DEXIV2_ENABLE_CURL=OFF",
                "-DEXIV2_ENABLE_SSH=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF",
                "-DEXIV2_BUILD_PO=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_BUILD_UNIT_TESTS=OFF",
                "-DEXIV2_BUILD_DOC=OFF",
                "-DEXIV2_TEAM_EXTRA_WARNINGS=OFF",
                "-DEXIV2_TEAM_WARNINGS_AS_ERRORS=OFF",
                "-DEXIV2_TEAM_USE_SANITIZERS=OFF",
                "-DEXIV2_ENABLE_WIN_UNICODE=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/archive/refs/tags/v0.28.5.tar.gz",
                    "sha256": "e1671f744e379a87ba0c984617406fdf8c0ad0c594e5122f525b2fb7c28d394d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 769,
                        "stable-only": true,
                        "url-template": "https://github.com/Exiv2/exiv2/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkexiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.2/src/libkexiv2-24.12.2.tar.xz",
                    "sha256": "f797fd8f442f578de464ba2b861b9d6b2d02e2351a3ffb6aa5e54ce2947c2c8f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkexiv2-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "marble",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_DESIGNER_PLUGIN=OFF",
                "-DBUILD_MARBLE_TESTS=OFF",
                "-DBUILD_MARBLE_TOOLS=OFF",
                "-DBUILD_MARBLE_EXAMPLES=OFF",
                "-DBUILD_MARBLE_APPS=OFF",
                "-DBUILD_WITH_DBUS=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "cleanup": [
                "/mkspecs"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.2/src/marble-24.12.2.tar.xz",
                    "sha256": "83d0a459dc87a7ac0e421c4b5e634f14b8d513a1f93fa8ff1bb43cdc87b8db9f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/marble-$version.tar.xz"
                    }
                }
            ],
            "modules": [
                {
                    "name": "wireless-tools",
                    "buildsystem": "simple",
                    "subdir": "wireless_tools",
                    "build-commands": [
                        "make",
                        "make INSTALL_DIR=\"${FLATPAK_DEST}/bin\" INSTALL_LIB=\"${FLATPAK_DEST}/lib\" INSTALL_INC=\"${FLATPAK_DEST}/include\" INSTALL_MAN=\"${FLATPAK_DEST}/share/man\" install"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/HewlettPackard/wireless-tools/archive/refs/tags/v29.tar.gz",
                            "sha256": "69c5face9ac9d3273042436408a9a057d3416a814253dedeaaef210fcbc42d40",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 5136,
                                "stable-only": true,
                                "url-template": "https://github.com/HewlettPackard/wireless-tools/archive/refs/tags/v$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/share/man",
                        "/bin"
                    ]
                },
                {
                    "name": "libwlocate",
                    "buildsystem": "simple",
                    "subdir": "master",
                    "build-commands": [
                        "make -f Makelib",
                        "make",
                        "install -D libwlocate.so ${FLATPAK_DEST}/lib/libwlocate.so",
                        "install -D libwlocate.h ${FLATPAK_DEST}/include/libwlocate.h"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/openwifi-su/lwlocate/archive/refs/tags/v0.1.tar.gz",
                            "sha256": "791899f4890fa88553b4e8417376187d7d533ead962f5fe51f598b6ed9a2c258"
                        }
                    ]
                },
                {
                    "name": "shapelib",
                    "buildsystem": "autotools",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://download.osgeo.org/shapelib/shapelib-1.6.1.tar.gz",
                            "sha256": "5da90a60e25440f108f4e8e95732bfa83ede13c8e0c2bcf80ae41006cc8ebc20",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 4804,
                                "stable-only": true,
                                "url-template": "http://download.osgeo.org/shapelib/shapelib-$version.tar.gz"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "kgeotag",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kgeotag/1.7.0/kgeotag-1.7.0.tar.xz",
                    "sha256": "20134122cbcfae2b82f6ac54c662a9b344379f9150dd2a11a420bc57db9061c0",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242955,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kgeotag/$version/kgeotag-$version.tar.xz"
                    }
                }
            ],
            "post-install": [
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"${FLATPAK_ID}\" \"${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop\""
            ]
        }
    ]
}
