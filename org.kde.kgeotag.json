{
    "id": "org.kde.kgeotag",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-23.08",
    "command": "kgeotag",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network"
    ],
    "modules": [
        {
            "name": "inih",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddefault_library=shared",
                "-Ddistro_install=true",
                "-Dwith_INIReader=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/benhoyt/inih/archive/refs/tags/r57.tar.gz",
                    "sha256": "f03f98ca35c3adb56b2358573c8d3eda319ccd5287243d691e724b7eafa970b3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11600,
                        "stable-only": true,
                        "url-template": "https://github.com/benhoyt/inih/archive/refs/tags/r$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DEXIV2_ENABLE_XMP=ON",
                "-DEXIV2_ENABLE_EXTERNAL_XMP=OFF",
                "-DEXIV2_ENABLE_PNG=ON",
                "-DEXIV2_ENABLE_NLS=ON",
                "-DEXIV2_ENABLE_PRINTUCS2=ON",
                "-DEXIV2_ENABLE_LENSDATA=ON",
                "-DEXIV2_ENABLE_VIDEO=OFF",
                "-DEXIV2_ENABLE_WEBREADY=OFF",
                "-DEXIV2_ENABLE_DYNAMIC_RUNTIME=OFF",
                "-DEXIV2_ENABLE_CURL=OFF",
                "-DEXIV2_ENABLE_SSH=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF",
                "-DEXIV2_BUILD_PO=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_BUILD_UNIT_TESTS=OFF",
                "-DEXIV2_BUILD_DOC=OFF",
                "-DEXIV2_TEAM_EXTRA_WARNINGS=OFF",
                "-DEXIV2_TEAM_WARNINGS_AS_ERRORS=OFF",
                "-DEXIV2_TEAM_USE_SANITIZERS=OFF",
                "-DEXIV2_ENABLE_WIN_UNICODE=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/releases/download/v0.28.0/exiv2-0.28.0-Source.tar.gz",
                    "sha256": "89af3b5ef7277753ef7a7b5374ae017c6b9e304db3b688f1948e73e103491f3d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 769,
                        "stable-only": true,
                        "url-template": "https://github.com/Exiv2/exiv2/releases/download/v$version/exiv2-$version-Source.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libkexiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.3/src/libkexiv2-23.08.3.tar.xz",
                    "sha256": "07f03d40a89cb5bad2deec80784ea7d4cea702d201f06b97f3888c433df638dd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libkexiv2-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "marble",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_DESIGNER_PLUGIN=OFF",
                "-DBUILD_MARBLE_TESTS=OFF",
                "-DBUILD_MARBLE_TOOLS=OFF",
                "-DBUILD_MARBLE_EXAMPLES=OFF",
                "-DBUILD_MARBLE_APPS=OFF",
                "-DBUILD_WITH_DBUS=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "cleanup": [
                "/mkspecs"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.3/src/marble-23.08.3.tar.xz",
                    "sha256": "805e175f8ea8201eea303fe2f2359aec30fc1c0a4918f0f7ab51f6e51431c298",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/marble-$version.tar.xz"
                    }
                }
            ],
            "modules": [
                {
                    "name": "wireless-tools",
                    "buildsystem": "simple",
                    "subdir": "wireless_tools",
                    "build-commands": [
                        "make",
                        "make INSTALL_DIR=\"${FLATPAK_DEST}/bin\" INSTALL_LIB=\"${FLATPAK_DEST}/lib\" INSTALL_INC=\"${FLATPAK_DEST}/include\" INSTALL_MAN=\"${FLATPAK_DEST}/share/man\" install"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/HewlettPackard/wireless-tools/archive/refs/tags/v29.tar.gz",
                            "sha256": "69c5face9ac9d3273042436408a9a057d3416a814253dedeaaef210fcbc42d40",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 5136,
                                "stable-only": true,
                                "url-template": "https://github.com/HewlettPackard/wireless-tools/archive/refs/tags/v$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/share/man",
                        "/bin"
                    ]
                },
                {
                    "name": "libwlocate",
                    "buildsystem": "simple",
                    "subdir": "master",
                    "build-commands": [
                        "make -f Makelib",
                        "make",
                        "install -D libwlocate.so ${FLATPAK_DEST}/lib/libwlocate.so",
                        "install -D libwlocate.h ${FLATPAK_DEST}/include/libwlocate.h"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/openwifi-su/lwlocate/archive/refs/tags/v0.1.tar.gz",
                            "sha256": "791899f4890fa88553b4e8417376187d7d533ead962f5fe51f598b6ed9a2c258"
                        }
                    ]
                },
                {
                    "name": "shapelib",
                    "buildsystem": "autotools",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://download.osgeo.org/shapelib/shapelib-1.5.0.tar.gz",
                            "sha256": "1fc0a480982caef9e7b9423070b47750ba34cd0ba82668f2e638fab1d07adae1",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 4804,
                                "stable-only": true,
                                "url-template": "http://download.osgeo.org/shapelib/shapelib-$version.tar.gz"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "kgeotag",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kgeotag/1.4.0/kgeotag-1.4.0.tar.xz",
                    "sha256": "c6da7ffd134be2beca2a1de3fffc2960d0b70d87d4a103871c349dff8b941ee1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242955,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kgeotag/$version/kgeotag-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
